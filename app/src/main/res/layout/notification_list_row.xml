<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:background="@drawable/list_selector"
                android:orientation="horizontal"
                android:padding="5dp">

    <ImageView
        android:id="@+id/doctor_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:layout_margin="2dp"
        android:src="@drawable/profile_place_holder" android:contentDescription="@string/sender_photo"/>

    <TextView
        android:id="@+id/snippet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/doctor_image"
        android:layout_toEndOf="@+id/doctor_image"
        android:layout_toRightOf="@+id/doctor_image"
        android:text="@string/Notification_sender"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:typeface="sans"/>

    <TextView
        android:id="@+id/artist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/snippet"
        android:layout_marginTop="1dip"
        android:layout_toEndOf="@+id/doctor_image"
        android:layout_toRightOf="@+id/doctor_image"
        android:text="@string/notification_descrip"
        android:textColor="#636161"
        android:textSize="15sp"
        android:ellipsize="end"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/snippet"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:gravity="end"
        android:text="@string/notification_time"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:ignore="RelativeOverlap"/>

</RelativeLayout>
